{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Recipe API",
    "description": "Recipes with reviews and shopping lists"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/recipes/": {
      "post": {
        "description": "Add a recipe to the database",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "PB&J"
                },
                "ingredients": {
                  "example": [
                    "1 Tbs peanut butter",
                    "1 Tbs jam/jelly (your choice of flavor)",
                    "2 slices of bread"
                  ]
                },
                "instructions": {
                  "example": [
                    "Spread peanut butter on one slice of bread.",
                    "Spread jam/jelly on 2nd slice.",
                    "Put slices together, peanut butter and jam on the inside.",
                    "Serve with a cold glass of milk."
                  ]
                },
                "imageLink": {
                  "example": "https://unsplash.com/s/photos/sandwich"
                },
                "date": {
                  "example": "2022-06-21T00:00:00.000+00:00"
                },
                "userPosted": {
                  "example": "any"
                },
                "keyWords": {
                  "example": [
                    "peanut butter",
                    "jam",
                    "jelly",
                    "sandwich"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "description": "Retrieve all recipes",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/keywords": {
      "get": {
        "description": "Retrieve recipes using keyword(s)",
        "parameters": [
          {
            "name": "keywords",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/userPosted/{userPostedId}": {
      "get": {
        "description": "Retrieve recipes posted by specified user",
        "parameters": [
          {
            "name": "userPostedId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{recipe_id}": {
      "get": {
        "description": "Retrieve recipe by recipe ID",
        "parameters": [
          {
            "name": "recipe_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{id}": {
      "put": {
        "description": "Edit recipe with matching ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete recipe with matching ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reviews/{recipe_id}/{user_id}": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "recipe_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "username",
            "in": "query",
            "required": true,
            "type": "string",
            "enum": [ "Jacob", "Cameron", "Talitha", "Terri"],
            "description": "Choose a user"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "review": {
                  "example": "any"
                },
                "rating": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reviews/": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}