{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API",
    "description": ""
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http", "https"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Delivers home page",
        "parameters": [],
        "responses": {}
      }
    },
    "/recipes/": {
      "post": {
        "description": "Add a new recipe to the recipe collection in mongodb",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "New Recipe!"
                },
                "ingredients": {
                  "example": ["Sugar", "Flour", "Eggs"]
                },
                "instructions": {
                  "example": ["Add everything together", "Bake at 350"]
                },
                "imageLink": {
                  "example": "new-recipe.jpeg"
                },
                "userPosted": {
                  "example": "62b22dbe5361f5388a5c5d87"
                },
                "keyWords": {
                  "example": ["sweet", "treat", "easy"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "description": "Returns all recipes from the recipes collection in mongodb",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/keywords": {
      "get": {
        "description": "Returns recipes that match any of the key words you specify",
        "parameters": [
          {
            "name": "keywords",
            "in": "query",
            "type": "array",
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/userPosted/{userPostedId}": {
      "get": {
        "description": "Returns all recipes created by a specific user. Enter the user's ID",
        "parameters": [
          {
            "name": "userPostedId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{recipe_id}": {
      "get": {
        "description": "Returns only one recipe specified by recipe ID",
        "parameters": [
          {
            "name": "recipe_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/recipes/{id}": {
      "put": {
        "description": "Updates one recipe with the ID specified",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Deletes one recipe with the ID specified",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reviews/{recipe_id}/{user_id}": {
      "post": {
        "description": "Create a new review with a pre-existing recipe_id and user_id",
        "parameters": [
          {
            "name": "recipe_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "review": {
                  "example": "Great food!"
                },
                "rating": {
                  "example": "5"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reviews/": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}